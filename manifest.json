{
  "manifest_version": 3,
  "name": "GitLab Pipeline Notifier",
  "version": "1.0.0",
  "description": "GitLab 파이프라인 빌드 완료 시 macOS 알림을 보내줍니다",
  "permissions": [
    "notifications",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.gitlab.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GitLab Pipeline Notifier"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.gitlab.com/*/-/pipelines",
        "*://*.gitlab.com/*/-/pipelines/*"
      ],
      "js": ["config.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}
